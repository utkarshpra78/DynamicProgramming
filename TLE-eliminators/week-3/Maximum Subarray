// Utility functions
template <typename T>
void print(T &&t)  { cout << t << "\n"; }
void printarr(ll arr[], ll n){fl(i,n) cout << arr[i] << " ";cout << "\n";}
template<typename T>
void printvec(vector<T>v){ll n=v.size();fl(i,n)cout<<v[i]<<" ";cout<<"\n";}
template<typename T>
ll sumvec(vector<T>v){ll n=v.size();ll s=0;fl(i,n)s+=v[i];return s;}


ll n,k,x;
vll v;

ll f(ll ind,ll left,vector<vector<ll>>&dp){
	if(ind==n){
		return 0;
	}
	
	if(dp[ind][left]!=-1){
		return dp[ind][left];
	}
	ll add=0,sub=0;
	if(left){
		add=max(add,v[ind]+x+f(ind+1,left-1,dp));
	}
	if(left<n-ind){
		sub=max(sub,v[ind]-x+f(ind+1,left,dp));
	}
	
	return dp[ind][left]=max(add,sub);
	
}

void square(){
    //write code here
    cin>>n>>k>>x;v.resize(n);cin>>v;
    vector<vll>dp(n,vll(k+1,-1));
    f(0,k,dp);
    ll maxi=INT_MIN;
    fl(i,n){
    	maxi=max(maxi,*max_element(vr(dp[i])));
    }
    
    cout<<maxi<<endl;
    
     
 }

